@{
    Layout="~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3> <h2>@ViewData["Head"]</h2>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>

            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>
    @using (Html.BeginForm())
    {
        @Html.ListBox("countries",
                new MultiSelectList(new string[] { "Россия", "США", "Китай", "Индия" }))
        <p><input type="submit" value="Отправить" /></p>
    }
    <form>
        <input type="hidden" value="@ViewBag.BookId" name="BookId" />
        <table>
            <tr>
                <td>
                    <p>
                        Введите свое имя
                    </p>
                </td>
                <td><input type="text" name="Person" /> </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Введите адрес :
                    </p>
                </td>
                <td>@Html.Password("UserPassword", "val") </td>

            </tr>
            <tr>
                <td><input type="submit" value="Отправить" />
                <td>
                </td>

            </tr>
        </table>




    </form>
</body>
@section Footer {
    Все права защищены. Syte Corp. 2012.
}
</html> 